{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "next-env.d.ts",
    "src/app/portal/**/*.ts",
    "src/app/portal/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/app/layout.tsx",
    "src/app/page.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/app/admin/**",
    "src/app/api/**",
    "src/app/team-portal/**",
    "src/app/field/**",
    "src/lib/**",
    "src/middleware/**"
  ]
}

